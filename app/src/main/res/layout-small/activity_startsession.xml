<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/grey"
    tools:context="seniordesign.seniordesign.Startsession"
    >

    <Button
        android:layout_width="40sp"
        android:layout_height="20sp"
        android:text="Score"
        android:id="@+id/button"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffffff"
        android:onClick="start_score"
        android:textSize="6sp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40sp"
        android:layout_height="20sp"
        android:text="Cluster Size"
        android:id="@+id/button6"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffffff"
        android:onClick="start_clustersize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="6sp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="Accuracy"
        android:id="@+id/button8"
        android:background="@drawable/buttonshape"
        android:textColor="#ffffffff"
        android:layout_weight="0.09"
        android:onClick="start_Accuracy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="6sp" />


    <seniordesign.seniordesign.MyView
        android:id="@+id/drawable_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button" />

    <Button
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="For the Bluetooth"
        android:id="@+id/button5"
        android:background="@drawable/buttonshape"
        android:textSize="6sp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/button8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6" />


</RelativeLayout>
