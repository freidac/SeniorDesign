<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/grey"
    tools:context="seniordesign.seniordesign.Startscore">

    <TextView android:text="Your Score is :" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="90sp"
        android:id="@+id/Scoreheader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:textColor="#ff6d0310" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_result"
        android:layout_below="@+id/Scoreheader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:textColor="#ff6d0310"
        android:textSize="60sp"
        android:textStyle="bold" />

</RelativeLayout>
